<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.fragments.ViewOrderMedicineFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_view_medicine_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_view_medicine_order" />

    <TextView
        android:id="@+id/tv_no_order_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_medicine_order_booked"
        android:textSize="16sp" />

</LinearLayout>