<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.fragments.ViewLabTestAppointmentsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_view_lab_test_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_view_lab_test_booking" />

    <TextView
        android:id="@+id/tv_no_lab_test_booked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_test_booked"
        android:textSize="16sp" />

</LinearLayout>